<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Other views in the admin panel layout -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/adminPanelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <!-- Total Votes TextView -->
        <TextView
            android:id="@+id/totalVotesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="16dp" />

        <!-- Party 1 Votes TextView -->
        <TextView
            android:id="@+id/party1VotesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="16dp" />

        <!-- Party 2 Votes TextView -->
        <TextView
            android:id="@+id/party2VotesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="16dp" />

        <!-- Party 3 Votes TextView -->
        <TextView
            android:id="@+id/party3VotesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="16dp" />

        <!-- Remaining contents -->
        <LinearLayout
            android:id="@+id/partyVotesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Place the remaining contents here -->

            <!-- Election Result TextView -->
            <TextView
                android:id="@+id/electionResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="16dp" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>
