<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#72A13C"
    tools:context=".ReparteeActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_launcher_round"
        android:text="Choose Your Party"
        android:textSize="27sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <RadioGroup
        android:id="@+id/radioGroupCandidates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RadioButton
            android:id="@+id/radioButtonParty1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Party 1 (Aam Aadmi Party)" />

        <RadioButton
            android:id="@+id/radioButtonParty2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Party 2 (BJP)" />

        <RadioButton
            android:id="@+id/radioButtonParty3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Party 3 (Congress)" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupIssues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <RadioButton
            android:id="@+id/radioButtonIssue1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issue 1" />

        <RadioButton
            android:id="@+id/radioButtonIssue2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issue 2" />

        <RadioButton
            android:id="@+id/radioButtonIssue3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Issue 3" />

    </RadioGroup>

    <Button
        android:id="@+id/buttonVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Vote"
        android:layout_gravity="center"
        android:padding="16dp" />

    <TextView
        android:id="@+id/textViewParty1Votes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Party 1 Votes: 0"
        android:padding="16dp" />

    <TextView
        android:id="@+id/textViewParty2Votes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Party 2 Votes: 0"
        android:padding="16dp" />

    <TextView
        android:id="@+id/textViewParty3Votes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Party 3 Votes: 0"
        android:padding="16dp" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp" />

</LinearLayout>